{
  "name": "marcadortv",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "npm run start:auto",
    "start:auto": "node -e \"console.log('üîç Detectando plataforma...'); const fs = require('fs'); const isPi = fs.existsSync('/proc/device-tree/model'); console.log(isPi ? 'ü•ß Raspberry Pi detectada' : 'üíª PC detectada'); process.exit(0);\" && npm run start:all",
    "start:pc": "cross-env PLATFORM=pc npm run start:all",
    "start:pi": "cross-env PLATFORM=pi npm run start:all",
    "start:pi-production": "cross-env NODE_ENV=production PLATFORM=pi npm run start:production",
    "dev": "vite",
    "build": "vite build",
    "build:pi": "cross-env PLATFORM=pi npm run build",
    "lint": "eslint .",
    "preview": "vite preview",
    "start:all": "concurrently \"npm run dev -- --host\" \"node remote-control-server.cjs\" \"node server.cjs\"",
    "start:production": "concurrently \"node server-production.cjs\" \"node remote-control-server.cjs\"",
    "install:pi": "chmod +x install-pi.sh && ./install-pi.sh",
    "setup:pi-network": "node setup-pi-network.js"
  },
  "dependencies": {
    "@babel/code-frame": "^7.27.1",
    "@types/qrcode": "^1.5.5",
    "cross-env": "^10.1.0",
    "express": "^5.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "multer": "^2.0.2",
    "qrcode": "^1.5.4",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.2",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "vite": "^7.1.2"
  }
}
